package com.example.arrayadapter;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.content.Intent;
import android.view.View;
import android.widget.ArrayAdapter;
import android.widget.AdapterView;
import android.widget.ListView;

public class MainActivity extends AppCompatActivity {

    String fruits[] = {"Apple", "Banana", "Dates", "Orange", "Pomegranate"};
    ListView list;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        list = findViewById(R.id.list);

        ArrayAdapter<String> adapter =
                new ArrayAdapter<>(this, R.layout.activity_main2, R.id.textview, fruits);
        list.setAdapter(adapter);

        list.setOnItemClickListener((parent, view, position, id) -> {
            if (position == 0)
                startActivity(new Intent(this, apple.class));
            else if (position == 1)
                startActivity(new Intent(this, banana.class));
            else if (position == 2)
                startActivity(new Intent(this, dates.class));
            else if (position == 3)
                startActivity(new Intent(this, orange.class));
            else if (position == 4)
                startActivity(new Intent(this, pomogranate.class));
        });
    }
}
